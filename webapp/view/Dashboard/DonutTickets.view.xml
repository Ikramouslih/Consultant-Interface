<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns="sap.suite.ui.microchart"
    xmlns:layout="sap.ui.layout"
    controllerName="management.controller.DonutTickets"
>
    <layout:Grid
        id="_IDGenGrid1"
        defaultSpan="XL6 L6 M6 S12"
    >
        <m:Text
            id="_IDGenText1"
            text="Three segments"
            class="sapUiSmallMargin"
        >
            <m:layoutData>
                <layout:GridData
                    id="_IDGenGridData1"
                    span="XL12 L12 M12 S12"
                />
            </m:layoutData>
        </m:Text>
        <m:FlexBox
            id="_IDGenFlexBox1"
            width="20rem"
            height="10rem"
            alignItems="Start"
            justifyContent="SpaceBetween"
        >
            <m:items>
                <InteractiveDonutChart
                    id="_IDGenInteractiveDonutChart1"
                    selectionChanged="onSelectionChanged"
                >
                    <segments>
                        <InteractiveDonutChartSegment
                            id="_IDGenInteractiveDonutChartSegment1"
                            label="Implementation Phase"
                            value="40.0"
                            displayedValue="40.0%"
                        />
                        <InteractiveDonutChartSegment
                            id="_IDGenInteractiveDonutChartSegment2"
                            label="Design Phase"
                            value="21.5"
                            displayedValue="21.5%"
                        />
                        <InteractiveDonutChartSegment
                            id="_IDGenInteractiveDonutChartSegment3"
                            label="Test Phase"
                            value="38.5"
                            displayedValue="38.5%"
                        />
                    </segments>
                </InteractiveDonutChart>
            </m:items>
        </m:FlexBox>
    </layout:Grid>
</mvc:View>
