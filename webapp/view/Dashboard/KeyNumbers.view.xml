<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.ui.comp.smartmicrochart"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    core:require="{ baseFormatMessage: 'sap/base/strings/formatMessage' }"
    xmlns:mc="sap.suite.ui.microchart"
    xmlns:s="sap.ui.comp.smartmicrochart"
    controllerName="management.controller.KeyNumbers"
>
    <m:ObjectHeader
        id="_IDGenObjectHeader1"
        class="shadowbox"
        responsive="true"
    >
        <m:headerContainer>
            <m:HeaderContainer
                id="_IDGenHeaderContainer1"
                scrollStep="200"
                scrollTime="500"
                showDividers="true"
            >
                <!-- Target Tickets Chart -->

                <m:FlexBox
                    id="_IDGenFlexBox1"
                    width="12rem"
                    height="12rem"
                    alignItems="Center"
                    justifyContent="Center"
                    direction="Column"
                    renderType="Bare"
                >
                    <m:Title
                        id="_IDGenTitle1"
                        text="Target Tickets"
                        class="sapUiSmallMargin keytitles"
                    />

                    <m:FlexBox
                        id="_IDGenFlexBox2"
                        width="6rem"
                        height="13rem"
                        renderType="Bare"
                    >
                        <mc:RadialMicroChart
                            id="_IDGenRadialMicroChart1"
                            percentage="0"
                            height="7rem"
                        />
                    </m:FlexBox>
                </m:FlexBox>

                <!-- Tickets' Status Chart -->

                <m:FlexBox
                    id="_IDGenFlexBox7"
                    alignItems="Center"
                    justifyContent="Center"
                    direction="Column"
                    renderType="Bare"
                    width="25rem"
                    height="12rem"
                >
                    <m:Title
                        id="_IDGenTitle1q"
                        text="Tickets' Status"
                        class="sapUiSmallMargin keytitles"
                    />

                    <m:FlexBox
                        id="_IDGenFlexBox8"
                        renderType="Bare"
                        width="25rem"
                        height="13rem"
                    >
                        <mvc:XMLView
                            id="_IDGenXMLView4"
                            viewName="management.view.Dashboard.DonutManagement"
                        />
                    </m:FlexBox>
                </m:FlexBox>

                <!-- Tickets' Priority Chart -->

                <m:FlexBox
                    id="_IDGenFlexBox3"
                    width="16rem"
                    height="12rem"
                    alignItems="Center"
                    justifyContent="Center"
                    direction="Column"
                    renderType="Bare"
                >
                    <m:Title
                        id="_IDGenTitle2"
                        text="Tickets' Priority"
                        class="sapUiSmallMargin keytitles"
                    />

                    <m:FlexBox
                        id="_IDGenFlexBox4"
                        width="16rem"
                        height="13rem"
                        renderType="Bare"
                    >
                        <mc:ComparisonMicroChart
                            id="_IDGenComparisonMicroChart1"
                            isResponsive="true"
                        >
                            <mc:ComparisonMicroChartData
                                id="_IDGenComparisonMicroChartData1"
                                title="Low"
                                value="{priorityData>/low/value}"
                                displayValue="{priorityData>/low/displayValue}"
                                color="Good"
                            />

                            <mc:ComparisonMicroChartData
                                id="_IDGenComparisonMicroChartData13"
                                title="Medium"
                                value="{priorityData>/medium/value}"
                                displayValue="{priorityData>/medium/displayValue}"
                                color="Critical"
                            />

                            <mc:ComparisonMicroChartData
                                id="_IDGenComparisonMicroChartData12"
                                title="High"
                                value="{priorityData>/high/value}"
                                displayValue="{priorityData>/high/displayValue}"
                                color="Error"
                            />

                            <mc:ComparisonMicroChartData
                                id="_IDGenComparisonMicroChartData15"
                                title="Total"
                                value="{priorityData>/total/value}"
                                displayValue="{priorityData>/total/displayValue}"
                                color="Error"
                            />
                        </mc:ComparisonMicroChart>
                    </m:FlexBox>
                </m:FlexBox>

                <!-- Projects with Most Tickets Chart -->

                <m:FlexBox
                    id="_IDGenFlexBox1A"
                    width="16rem"
                    height="13rem"
                    alignItems="Center"
                    justifyContent="Center"
                    direction="Column"
                    renderType="Bare"
                >
                    <m:Title
                        id="_IDGenTitle1A"
                        text="Projects with Most Tickets"
                        class="sapUiSmallMargin keytitles"
                    />

                    <m:FlexBox
                        id="_IDGenFlexBox2A"
                        width="10rem"
                        height="13rem"
                        renderType="Bare"
                    >
                        <mc:ColumnMicroChart
                            id="SmartChart"
                             allowColumnLabels="true"
                             size="L"
                        >
                            <mc:columns>
                                <mc:ColumnMicroChartData
                                    id="_IDGenColumnMicroChartData1"
                                    value=""
                                    color="Good"
                                    label=""
                                    displayValue=""

                                />
                                <mc:ColumnMicroChartData
                                    id="_IDGenColumnMicroChartData2"
                                    value=""
                                    color="Good"
                                    label=""
                                    displayValue=""
                                />
                                <mc:ColumnMicroChartData
                                    id="_IDGenColumnMicroChartData3"
                                    value=""
                                    color="Good"
                                    label=""
                                    displayValue=""
                                />
                                <mc:ColumnMicroChartData
                                    id="_IDGenColumnMicroChartData4"
                                    value=""
                                    color="Good"
                                    label=""
                                    displayValue=""
                                />
                            </mc:columns>
                        </mc:ColumnMicroChart>
                    </m:FlexBox>
                </m:FlexBox>
            </m:HeaderContainer>
        </m:headerContainer>
    </m:ObjectHeader>
</mvc:View>
