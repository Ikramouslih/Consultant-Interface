<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    controllerName="management.controller.ConsultantDetails"
    height="100%"
    displayBlock="true"
>
    <Table
        id="idProductsTable"
        items="{TICKETIDDATA>/}"
    >
        <headerToolbar>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <SearchField
                    id="searchField"
                    width="auto"
                    search=".onFilterPosts"
                    liveChange="onSearch"
                />
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column id="_IDGenColumn1">
                <Text
                    id="_IDGenText1"
                    text="ID (Jira)"
                />
            </Column>
            <Column id="_IDGenColumn2">
                <Text
                    id="_IDGenText2"
                    text="Titre"
                />
            </Column>
            <Column id="_IDGenColumn3">
                <Text
                    id="_IDGenText3"
                    text="Projet"
                />
            </Column>
            <Column id="_IDGenColumn4">
                <Text
                    id="_IDGenText4"
                    text="Created"
                />
            </Column>
            <Column id="_IDGenColumn5">
                <Text
                    id="_IDGenText5"
                    text="Status"
                />
            </Column>
            <Column id="_IDGenColumn6">
                <Text
                    id="_IDGenText6"
                    text="Technology"
                />
            </Column>
            <Column id="_IDGenColumn7">
                <Text
                    id="_IDGenText7"
                    text="Days"
                />
            </Column>
            <Column id="_IDGenColumn8">
                <Text
                    id="_IDGenText8"
                    text="Consultant"
                />
            </Column>
        </columns>
        <items>
            <ColumnListItem id="_IDGenColumnListItem1">
                <cells>
                    <Link
                        id="_IDGenLink1"
                        text="{TICKETIDDATA>IdJira}"
                        press="showTicketInfo"
                    />
                    <Text
                        id="_IDGenText9"
                        text="{TICKETIDDATA>Titre}"
                    />
                    <Text
                        id="_IDGenText10"
                        text="{TICKETIDDATA>Projet}"
                    />
                    <Text
                        id="_IDGenText11"
                        text="{TICKETIDDATA>CreatedBy}"
                    />
                    <Text
                        id="_IDGenText12"
                        text="{TICKETIDDATA>Status}"
                    />
                    <Text
                        id="_IDGenText13"
                        text="{TICKETIDDATA>Technology}"
                    />
                    <Text
                        id="_IDGenText14"
                        text="{TICKETIDDATA>Days}"
                    />
                    <Text
                        id="_IDGenText15"
                        text="{TICKETIDDATA>Consultant}"
                    />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>
