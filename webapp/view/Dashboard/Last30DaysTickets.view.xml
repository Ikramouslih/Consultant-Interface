<mvc:View
    controllerName="management.controller.Last30DaysTickets"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:grid="sap.ui.layout.cssgrid"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:smartchart="sap.ui.comp.smartchart"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
>
    <viz:VizFrame
        id="ticketChart"
        uiConfig="{applicationSet:'fiori'}"
        height="400px"
        width="100%"
        vizType="column"
    >
        <viz:dataset>
            <viz.data:FlattenedDataset id="_IDGenFlattenedDataset1">
                <viz.data:dimensions>
                    <viz.data:DimensionDefinition
                        id="_IDGenDimensionDefinition1"
                        name="Project"
                        value="{Projet}"
                    />
                </viz.data:dimensions>
                <viz.data:measures>
                    <viz.data:MeasureDefinition
                        id="_IDGenMeasureDefinition1"
                        name="Tickets Done"
                        value="{TicketsDone}"
                    />
                    <viz.data:MeasureDefinition
                        id="_IDGenMeasureDefinition2"
                        name="Tickets In Progress"
                        value="{TicketsInProgress}"
                    />
                </viz.data:measures>
            </viz.data:FlattenedDataset>
        </viz:dataset>
        <viz:feeds>
            <viz.feeds:FeedItem
                id="_IDGenFeedItem1"
                uid="valueAxis"
                type="Measure"
                values="Tickets Done"
            />
            <viz.feeds:FeedItem
                id="_IDGenFeedItem2"
                uid="valueAxis"
                type="Measure"
                values="Tickets In Progress"
            />
            <viz.feeds:FeedItem
                id="_IDGenFeedItem3"
                uid="categoryAxis"
                type="Dimension"
                values="Project"
            />
        </viz:feeds>
    </viz:VizFrame>
</mvc:View>
