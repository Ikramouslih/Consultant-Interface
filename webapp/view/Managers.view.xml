<mvc:View
  controllerName="management.controller.Managers"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:m="sap.m"
  xmlns:semantic="sap.f.semantic"
  displayBlock="true"
  xmlns="sap.ui.table"
  xmlns:tnt="sap.tnt"
>
  <semantic:SemanticPage
    id="page"
    headerExpanded="true"
    headerPinnable="false"
    titleAreaShrinkRatio="1:1.6:1.6"
  >
    <semantic:titleHeading>
      <m:Toolbar
        id="_IDGenToolbar1"
        class="width100"
      >
        <m:Title
          id="_IDGenTitle1"
          text="Managers"
          class="cardTitle"
        />
        <m:SearchField
          id="searchField"
          search=".onSearch"
          width="auto"
        />
      </m:Toolbar>
    </semantic:titleHeading>

    <semantic:headerContent>
      <m:IconTabBar
        id="iconTabBar"
        select="onQuickFilter"
        class="IconTabBarLayoutManagers"
      >
        <m:items>
          <m:IconTabFilter
            id="_IDGenIconTabFilter1"
            key="all"
            text="Managers"
            showAll="true"
            class="filterbuttonsuccess"
            count="{CountModel>/count}"
          />
          <m:IconTabFilter
            id="_IDGenIconTabFilter5"
            key="create"
            text="Create"
            icon="sap-icon://add"
          />
          <m:IconTabFilter
            id="extractButton"
            key="extract"
            text="Extract"
            icon="sap-icon://download"
            iconColor="Contrast"
            class="blackRoundBorder"
          />
        </m:items>
      </m:IconTabBar>
    </semantic:headerContent>

    <semantic:content>
      <Table
        id="idManagersTable"
        selectionMode="None"
        rows="{managersModel>/results}"
        alternateRowColors="true"
      >
        <columns>
          <Column
            id="_IDGenColumn1"
            width="6em"
            hAlign="Center"
          >
            <m:Label
              id="_IDGenText1"
              text="ID"
            />
            <template>
              <m:Text
                id="_IDGenText112"
                text="{managersModel>ManagerId}"
                wrapping="false"
              />
            </template>
          </Column>

          <Column
            id="_IDGenColumn2"
            width="9em"
            hAlign="Center"
          >
            <m:Label
              id="_IDGenText2"
              text="Last Name"
              wrapping="false"
            />
            <template>
              <m:Text
                id="_IDGenText11aQ2"
                text="{managersModel>Name}"
                wrapping="false"
              />
            </template>
          </Column>

          <Column
            id="_IDGenColumn3"
            width="9em"
            hAlign="Center"
          >
            <m:Label
              id="_IDGenText3"
              text="First Name"
            />
            <template>
              <m:Text
                id="_IDGenText11a2"
                text="{managersModel>FirstName}"
                wrapping="false"
              />
            </template>
          </Column>

          <Column
            id="_IDGenColumn5"
            width="20em"
            hAlign="Center"
          >
            <m:Label
              id="_IDGenText5"
              text="Email"
            />
            <template>
              <m:Text
                id="_IDGenTexts11a2"
                text="{managersModel>Email}"
                wrapping="false"
              />
            </template>
          </Column>
          
          <Column
            id="_IDGenColumn6A"
            hAlign="End"
          >
            <m:Label
              id="_IDGenText6A"
              text=""
            />
            <template>
              <m:Button
                id="ToggleButton1A"
                icon="sap-icon://show"
                type="Transparent"
                class="showicon"
                press="onShow"
              />
            </template>
          </Column>
          <Column
            id="_IDGenColumn6"
            hAlign="End"
          >
            <m:Label
              id="_IDGenText6"
              text=""
            />
            <template>
              <m:Button
                id="ToggleButton1"
                icon="sap-icon://edit"
                type="Transparent"
                class="showicon"
                press="onEdit"
              />
            </template>
          </Column>  
                          
        </columns>
      </Table>
    </semantic:content>
  </semantic:SemanticPage>
</mvc:View>
