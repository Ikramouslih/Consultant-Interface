<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	<Dialog
		id="mainDialogCreate"
		title="New Project"
        >
		<content>
			<VBox id="_IDGenVBox1" class="sapUiSmallMargin" >
                    <f:Form id="FormToolbar" editable="true" ariaLabelledBy="Title1">
                        <f:toolbar>
                            <Toolbar id="TB1">
                                <Title id="Title1" text="Create a new Project"/>
                                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                            </Toolbar>
                        </f:toolbar>
                        <f:layout>
                            <f:ResponsiveGridLayout id="_IDGenResponsiveGridLayout1"
                                labelSpanXL="3"
                                labelSpanL="3"
                                labelSpanM="3"
                                labelSpanS="12"
                                emptySpanXL="0"
                                emptySpanL="0"
                                emptySpanM="0"
                                emptySpanS="0"
                                columnsXL="2"
                                columnsL="2"
                                columnsM="2"
                                singleContainerFullSize="false"
                            />
                        </f:layout>
                        <f:formContainers>
                            <f:FormContainer id="_IDGenFormContainer1" ariaLabelledBy="Title2">
                                <f:formElements>
                                    <f:FormElement id="ProjectNameElement" label="Project's Name">
                                        <f:fields>
                                            <Input value="{ProjectName}" id="ProjectName" required="true"/>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="projectManagerElement" label="Project's Manager">
                                        <f:fields>
                                            <Input id="ChefProjet" value="{ChefProjet}" required="true" />
                                        </f:fields>
                                    </f:FormElement>
                                </f:formElements>
                            </f:FormContainer>
                        </f:formContainers>
                    </f:Form>
                    <HBox id="_IDGenHBox1" justifyContent="Center">
                        <Button id="_IDGenButton2" type="Accept"
                                class="sapUiMediumMargin"
                                text="Create"
                                press="onCreateProject"
                                width="8rem"
                                ariaDescribedBy="acceptButtonDescription genericButtonDescription">
                        </Button>
                        <Button id="_IDGenButton3" type="Reject"
                                class="sapUiMediumMargin"
                                text="Reset"
                                press="onResetProject"
                                width="8rem"
                                ariaDescribedBy="rejectButtonDescription genericButtonDescription">
                        </Button>
                        <Button id="_IDGenButton4" type="Back"
                                class="sapUiMediumMargin"
                                text="Cancel"
                                press="onCancelProjectCreate"
                                width="8rem"
                                ariaDescribedBy="rejectButtonDescription genericButtonDescription">
                        </Button>
                    </HBox>
                </VBox>
		</content>
	</Dialog>
</core:FragmentDefinition>