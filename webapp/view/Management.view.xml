<mvc:View
    controllerName="management.controller.Management"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:grid="sap.ui.layout.cssgrid"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:smartchart="sap.ui.comp.smartchart"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
>
    <ScrollContainer
        id="_IDGenScrollContainer1"
        vertical="true"
        horizontal="false"
        height="100%"
    >
        <Panel
            id="panelForGridList"
            backgroundDesign="Transparent"
        >
            <headerToolbar>
                <Toolbar
                    id="_IDGenToolbar1"
                    height="3rem"
                >
                    <Title
                        id="_IDGenTitle1"
                        text="Dashboard"
                    />
                </Toolbar>
            </headerToolbar>

            <mvc:XMLView
                id="_IDGenXMLView3"
                viewName="management.view.Dashboard.KeyNumbers"
                class="sapUiSmallMarginBottom"
            />

            <mvc:XMLView
                id="_IDGenXMLView4"
                viewName="management.view.Dashboard.Tiles"
                class="sapUiSmallMarginBottom"
            />

            <f:GridList id="grid1">
                <f:customLayout>
                    <grid:ResponsiveColumnLayout
                        id="_IDGenResponsiveColumnLayout1"
                    />
                </f:customLayout>

                <!-- Chart : tickets done vs tickets in progress for each project in last 30 days -->
                <f:GridListItem id="_IDGenGridListItem3">
                    <f:layoutData>
                        <grid:ResponsiveColumnItemLayoutData
                            id="_IDGenResponsiveColumnItemLayoutData3"
                            columns="12"
                            rows="1"
                        />
                    </f:layoutData>

                    <VBox
                        id="_IDGenVBox3"
                        class="sapUiSmallMargin"
                    >
                        <viz:VizFrame
                            id="ticketChart"
                            uiConfig="{applicationSet:'fiori'}"
                            height="400px"
                            width="100%"
                            vizType="column"
                        >
                            <viz:dataset>
                                <viz.data:FlattenedDataset
                                    id="_IDGenFlattenedDataset1"
                                >
                                    <viz.data:dimensions>
                                        <viz.data:DimensionDefinition
                                            id="_IDGenDimensionDefinition1"
                                            name="Project"
                                            value="{Projet}"
                                        />
                                    </viz.data:dimensions>
                                    <viz.data:measures>
                                        <viz.data:MeasureDefinition
                                            id="_IDGenMeasureDefinition1"
                                            name="Tickets Done"
                                            value="{TicketsDone}"
                                        />
                                        <viz.data:MeasureDefinition
                                            id="_IDGenMeasureDefinition2"
                                            name="Tickets In Progress"
                                            value="{TicketsInProgress}"
                                        />
                                    </viz.data:measures>
                                </viz.data:FlattenedDataset>
                            </viz:dataset>
                            <viz:feeds>
                                <viz.feeds:FeedItem
                                    id="_IDGenFeedItem1"
                                    uid="valueAxis"
                                    type="Measure"
                                    values="Tickets Done"
                                />
                                <viz.feeds:FeedItem
                                    id="_IDGenFeedItem2"
                                    uid="valueAxis"
                                    type="Measure"
                                    values="Tickets In Progress"
                                />
                                <viz.feeds:FeedItem
                                    id="_IDGenFeedItem3"
                                    uid="categoryAxis"
                                    type="Dimension"
                                    values="Project"
                                />
                            </viz:feeds>
                        </viz:VizFrame>
                    </VBox>
                </f:GridListItem>
            </f:GridList>
        </Panel>
    </ScrollContainer>
</mvc:View>
