<mvc:View
    controllerName="management.controller.Management"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:grid="sap.ui.layout.cssgrid"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:smartchart="sap.ui.comp.smartchart"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
>
    <ScrollContainer
        id="_IDGenScrollContainer1"
        vertical="true"
        horizontal="false"
        height="100%"
    >
        <Panel
            id="panelForGridList"
            backgroundDesign="Transparent"
        >
            <headerToolbar>
                <Toolbar
                    id="_IDGenToolbar1"
                    height="3rem"
                >
                    <Title
                        id="_IDGenTitle1"
                        text="Dashboard"
                    />
                </Toolbar>
            </headerToolbar>

            <mvc:XMLView
                id="_IDGenXMLView3"
                viewName="management.view.Dashboard.KeyNumbers"
                class="sapUiSmallMarginBottom"
            />

            <mvc:XMLView
                id="_IDGenXMLView1"
                viewName="management.view.Dashboard.Tiles"
                class="sapUiSmallMarginBottom"
            />

            <f:GridList id="grid1">
                <f:customLayout>
                    <grid:ResponsiveColumnLayout
                        id="_IDGenResponsiveColumnLayout1"
                    />
                </f:customLayout>

                <!-- Chart : tickets done vs tickets in progress for each project in last 30 days -->
                <f:GridListItem id="_IDGenGridListItem2">
                    <f:layoutData>
                        <grid:ResponsiveColumnItemLayoutData
                            id="_IDGenResponsiveColumnItemLayoutData3"
                            columns="12"
                            rows="1"
                        />
                    </f:layoutData>

                    <VBox
                        id="_IDGenVBox3"
                        class="sapUiSmallMargin"
                    >
                        <mvc:XMLView
                            id="_IDGenXMLView33"
                            viewName="management.view.Dashboard.Last30DaysTickets"
                            class="sapUiSmallMarginBottom"
                        />
                    </VBox>
                </f:GridListItem>
            </f:GridList>
        </Panel>
    </ScrollContainer>
</mvc:View>
