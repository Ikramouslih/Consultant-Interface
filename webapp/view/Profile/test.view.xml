<mvc:View
    controllerName="management.controller.Profile.ConsultantDetails"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:semantic="sap.f.semantic"
    displayBlock="true"
    xmlns="sap.ui.table"
    xmlns:tnt="sap.tnt"
>
    <semantic:SemanticPage
        id="page"
        headerExpanded="false"
        headerPinnable="false"
        titleAreaShrinkRatio="1:1.6:1.6"
    >
        <semantic:titleHeading>
            <m:Toolbar
                id="_IDGenToolbar1"
                class="width100"
            >
                <m:SearchField
                    id="searchField"
                    search=".onFilterPosts"
                    liveChange="onSearch"
                    width="auto"
                />
            </m:Toolbar>
        </semantic:titleHeading>

        <!-- Contenu principal avec la table des tickets -->
        <semantic:content>
            <Table
                id="idProductsTable"
                selectionMode="None"
                rows="{TICKETIDDATA>/}"
                alternateRowColors="true"
            >
                <!-- Liaison aux données OData -->

                <columns>
                    <!-- Définition des colonnes -->

                    <Column
                        id="_IDGenColumn12A"
                        width="5em"
                        hAlign="Center"
                    >
                        <m:Label
                            id="_IDGenLabelA12"
                            text="Ticket ID"
                        />
                        <template>
                            <m:Text
                                id="_IDGenText1A12"
                                text="{TICKETIDDATA>IdTicket}"
                                wrapping="false"
                            />
                        </template>
                    </Column>

                    <Column
                        id="_IDGenColumn12"
                        width="5em"
                        hAlign="Center"
                    >
                        <m:Label
                            id="_IDGenLabel12"
                            text="Jira ID"
                        />
                        <template>
                            <m:Text
                                id="_IDGenText112"
                                text="{TICKETIDDATA>IdJira}"
                                wrapping="false"
                            />
                        </template>
                    </Column>

                    <Column
                        id="_IDGenColumn1a2"
                        width="16rem"
                        hAlign="Center"
                    >
                        <m:Label
                            id="_IDGenLabel1a2"
                            text="Title"
                        />
                        <template>
                            <m:Text
                                id="_IDGenText11a2"
                                text="{TICKETIDDATA>Titre}"
                                wrapping="false"
                            />
                        </template>
                    </Column>

                    <Column
                        id="_IDGenColumn122"
                        width="11em"
                        hAlign="Center"
                    >
                        <m:Label
                            id="_IDGenLabel122"
                            text="Project"
                        />
                        <template>
                            <m:Text
                                id="_IDGenText1"
                                text="{TICKETIDDATA>ProjectName}"
                            />
                        </template>
                    </Column>

                    <Column
                        id="_IDGenColumn1212"
                        width="11em"
                        hAlign="Center"
                    >
                        <m:Label
                            id="_IDGenLabel1212"
                            text="Status"
                        />
                        <template>
                            <m:FlexBox
                                id="_IDGenFlexBox1"
                                direction="Column"
                                fitContainer="true"
                                alignItems="Start"
                                justifyContent="Start"
                            >
                                <m:GenericTag
                                    id="_IDGenGenericTag1"
                                    text="{TICKETIDDATA>Status}"
                                    design="Full"
                                    class="statusWidth"
                                    status="{= ${TICKETIDDATA>Status} === 'Done' ? 'Success' : ${TICKETIDDATA>Status} === 'Unassigned' ? 'Error' : ${TICKETIDDATA>Status} === 'In Progress' ? 'Information' : 'Warning'}"
                                />
                            </m:FlexBox>
                        </template>
                    </Column>

                    <Column
                        id="_IDGenColumna11211"
                        width="8em"
                        hAlign="Center"
                    >
                        <m:Label
                            id="_IDGenLabel1a2111a"
                            text="Priority"
                        />
                        <template>
                            <tnt:InfoLabel
                                id="il81"
                                text="{= ${TICKETIDDATA>Priority} === '' ? 'Low' : ${TICKETIDDATA>Priority}}"
                                colorScheme="{
                                    path: 'TICKETIDDATA>Priority',
                                    formatter: '.formatPriorityColor'
                                }"
                                icon="{
                                    path: 'TICKETIDDATA>Priority',
                                    formatter: '.formatPriorityIcon'
                                }"
                            />
                        </template>
                    </Column>

                    <Column
                        id="_IDGenColumna12"
                        width="7em"
                        hAlign="Center"
                    >
                        <m:Label
                            id="_IDGenLabel1a2a"
                            text="Creation Date"
                        />
                        <template>
                            <m:Text
                                id="_IDGenText11a2a"
                                text="{
                                    path: 'TICKETIDDATA>CreationDate',
                                    formatter: '.formatDate'
                                }"
                                wrapping="false"
                            />
                        </template>
                    </Column>

                    <Column
                        id="_IDGenColumna1211"
                        minWidth="7em"
                        hAlign="Center"
                    >
                        <m:Label
                            id="_IDGenLabel1a211a"
                            text="Estimated Days"
                        />
                        <template>
                            <m:Text
                                id="_IDGenText11a211a"
                                text="{TICKETIDDATA>Estimated}"
                                wrapping="false"
                            />
                        </template>
                    </Column>
                </columns>
            </Table>
        </semantic:content>
    </semantic:SemanticPage>
</mvc:View>
