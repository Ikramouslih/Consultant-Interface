<mvc:View
    controllerName="management.controller.Tickets.Ticket"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:semantic="sap.f.semantic"
    displayBlock="true"
    xmlns="sap.ui.table"
    xmlns:tnt="sap.tnt"
>
    <semantic:SemanticPage
        id="page"
        headerExpanded="true"
        headerPinnable="false"
        titleAreaShrinkRatio="1:1.6:1.6"
    >
        <semantic:titleHeading>
            <m:Toolbar
                id="_IDGenToolbar1"
                class="width100"
            >
                <m:Title
                    id="_IDGenTitle1"
                    text="Tickets"
                    class="cardTitle"
                />
                <m:SearchField
                    id="searchField"
                    search=".onSearch"
                    width="auto"
                />
            </m:Toolbar>
        </semantic:titleHeading>

        <!-- IconTabBar pour les filtres -->
        <semantic:headerContent>
            <m:IconTabBar
                id="iconTabBar"
                select="onQuickFilter"
                class="IconTabBarLayoutTickets"
            >
                <!-- EventHandler pour le filtrage -->
                <m:items>
                    <!-- Afficher tous les tickets -->
                    <m:IconTabFilter
                        id="_IDGenIconTabFilter1"
                        key="all"
                        text="Tickets"
                        showAll="true"
                        class="filterbuttonsuccess"
                        count="{CountModel>/count}"
                    />
                    <!-- Done -->
                    <m:IconTabFilter
                        id="_IDGenIconTabFilter2"
                        key="completed"
                        text="Done"
                        icon="sap-icon://message-success"
                        iconColor="Positive"
                        class="sapUiIconSuccess"
                        count="{CountModel>/completed}"
                    />
                    <!-- In Progress -->
                    <m:IconTabFilter
                        id="_IDGenIconTabFilter3"
                        key="in_progress"
                        text="In Progress"
                        icon="sap-icon://message-information"
                        iconColor="Default"
                        class="sapUiIconCritical"
                        count="{CountModel>/in_progress}"
                    />
                    <!-- In Progress -->
                    <m:IconTabFilter
                        id="_IDGenIconTabFilter23"
                        key="on_hold"
                        text="On Hold"
                        icon="sap-icon://message-warning"
                        iconColor="Critical"
                        count="{CountModel>/on_hold}"
                    />
                    <!-- Unassigned -->
                    <m:IconTabFilter
                        id="_IDGenIconTabFilter4"
                        key="not_assigned"
                        text="Unassigned"
                        icon="sap-icon://message-error"
                        iconColor="Negative"
                        class="sapUiIconDanger"
                        count="{CountModel>/not_assigned}"
                    />
                    <!-- Right aligned filters -->
                    <m:IconTabFilter
                        id="_IDGenIconTabFilter5"
                        key="create"
                        text="Create"
                        icon="sap-icon://add"
                        class="rightAligned"
                    />
                    <m:IconTabFilter
                        id="extractButton"
                        key="extract"
                        text="Extract"
                        icon="sap-icon://download"
                        iconColor="Contrast"
                        class="rightAligned blackRoundBorder"
                    />
                </m:items>
            </m:IconTabBar>
        </semantic:headerContent>

        <!-- Contenu principal avec la table des tickets -->
        <semantic:content>
            <Table
                id="idTicketsTable"
                selectionMode="None"
                rows="{TicketsModel>/Tickets}"
                alternateRowColors="true"
            >
                <!-- Liaison aux données OData -->

                <columns>
                    <!-- Définition des colonnes -->

                    <Column
                        id="_IDGenColumn11"
                        width="4rem"
                        hAlign="Center"
                    >
                        <m:Label
                            id="_IDGenLabel11"
                            text="Assign"
                        />
                        <template>
                            <m:ToggleButton
                                id="_IDGenToggleButton1"
                                icon="sap-icon://add-document"
                                type="Transparent"
                                enabled="{= ${TicketsModel>Status} === 'Unassigned' }"
                                press="onAssignTicket"
                            />
                        </template>
                    </Column>

                    <Column
                        id="_IDGenColumn12A"
                        width="5em"
                        hAlign="Center"
                    >
                        <m:Label
                            id="_IDGenLabelA12"
                            text="Ticket ID"
                        />
                        <template>
                            <m:Text
                                id="_IDGenText1A12"
                                text="{TicketsModel>IdTicket}"
                                wrapping="false"
                            />
                        </template>
                    </Column>

                    <Column
                        id="_IDGenColumn12"
                        width="5em"
                        hAlign="Center"
                    >
                        <m:Label
                            id="_IDGenLabel12"
                            text="Jira ID"
                        />
                        <template>
                            <m:Text
                                id="_IDGenText112"
                                text="{TicketsModel>IdJira}"
                                wrapping="false"
                            />
                        </template>
                    </Column>

                    <Column
                        id="_IDGenColumn1a2"
                        width="16rem"
                        hAlign="Center"
                    >
                        <m:Label
                            id="_IDGenLabel1a2"
                            text="Title"
                        />
                        <template>
                            <m:Text
                                id="_IDGenText11a2"
                                text="{TicketsModel>Titre}"
                                wrapping="false"
                            />
                        </template>
                    </Column>

                    <Column
                        id="_IDGenColumn122"
                        width="11em"
                        hAlign="Center"
                    >
                        <m:Label
                            id="_IDGenLabel122"
                            text="Project"
                        />
                        <template>
                            <m:Text
                                id="_IDGenText1"
                                text="{TicketsModel>ProjectName}"
                            />
                        </template>
                    </Column>

                    <Column
                        id="_IDGenColumn123"
                        width="14em"
                        hAlign="Center"
                    >
                        <m:Label
                            id="_IDGenLabel123"
                            text="Consultant"
                        />
                        <template>
                            <m:Text
                                id="_IDGenText11a2aA"
                                text="{= ${TicketsModel>ConsultantName} === '' ? '-' : ${TicketsModel>ConsultantName} }"
                                wrapping="false"
                            />
                        </template>
                    </Column>

                    <Column
                        id="_IDGenColumn1212"
                        width="11em"
                        hAlign="Center"
                    >
                        <m:Label
                            id="_IDGenLabel1212"
                            text="Status"
                        />
                        <template>
                            <m:FlexBox
                                id="_IDGenFlexBox1"
                                direction="Column"
                                fitContainer="true"
                                alignItems="Start"
                                justifyContent="Start"
                            >
                                <m:GenericTag
                                    id="_IDGenGenericTag1"
                                    text="{TicketsModel>Status}"
                                    design="Full"
                                    class="statusWidth"
                                    status="{= ${TicketsModel>Status} === 'Done' ? 'Success' : ${TicketsModel>Status} === 'Unassigned' ? 'Error' : ${TicketsModel>Status} === 'In Progress' ? 'Information' : 'Warning'}"
                                />
                            </m:FlexBox>
                        </template>
                    </Column>

                    <Column
                        id="_IDGenColumna11211"
                        width="8em"
                        hAlign="Center"
                    >
                        <m:Label
                            id="_IDGenLabel1a2111a"
                            text="Priority"
                        />
                        <template>
                            <tnt:InfoLabel
                                id="il81"
                                text="{= ${TicketsModel>Priority} === '' ? 'Low' : ${TicketsModel>Priority}}"
                                colorScheme="{
                                    path: 'TicketsModel>Priority',
                                    formatter: '.formatPriorityColor'
                                }"
                                icon="{
                                    path: 'TicketsModel>Priority',
                                    formatter: '.formatPriorityIcon'
                                }"
                            />
                        </template>
                    </Column>

                    <Column
                        id="_IDGenColumna12"
                        width="7em"
                        hAlign="Center"
                    >
                        <m:Label
                            id="_IDGenLabel1a2a"
                            text="Creation Date"
                        />
                        <template>
                            <m:Text
                                id="_IDGenText11a2a"
                                text="{
                                    path: 'TicketsModel>CreationDate',
                                    formatter: '.formatDate'
                                }"
                                wrapping="false"
                            />
                        </template>
                    </Column>

                    <Column
                        id="_IDGenColumna1211"
                        minWidth="7em"
                        hAlign="Center"
                    >
                        <m:Label
                            id="_IDGenLabel1a211a"
                            text="Estimated Days"
                        />
                        <template>
                            <m:Text
                                id="_IDGenText11a211a"
                                text="{TicketsModel>Estimated}"
                                wrapping="false"
                            />
                        </template>
                    </Column>
                </columns>
            </Table>
        </semantic:content>
    </semantic:SemanticPage>
</mvc:View>
