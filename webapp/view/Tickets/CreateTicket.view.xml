<mvc:View
    controllerName="management.controller.Tickets.CreateTicket"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:a="sap.f"
    displayBlock="true"
>
    <ScrollContainer
        id="_IDGenScrollContainer1"
        vertical="true"
        horizontal="false"
        height="100%"
    >
        <a:Card
            id="_IDGenCard1"
            class="sapUiMediumMargin"
            width="95%"
        >
            <a:content>
                <VBox
                    id="_IDGenVBox1"
                    class="sapUiSmallMargin"
                    width="100%"
                >
                    <f:Form
                        id="FormToolbar"
                        editable="true"
                        ariaLabelledBy="Title1"
                    >
                        <f:toolbar>
                            <Toolbar id="TB1">
                                <Title
                                    id="Title1"
                                    text="New Ticket"
                                />
                                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                            </Toolbar>
                        </f:toolbar>
                        <f:layout>
                            <f:ResponsiveGridLayout
                                id="_IDGenResponsiveGridLayout1"
                                labelSpanXL="3"
                                labelSpanL="3"
                                labelSpanM="3"
                                labelSpanS="12"
                                emptySpanXL="0"
                                emptySpanL="0"
                                emptySpanM="0"
                                emptySpanS="0"
                                columnsXL="1"
                                columnsL="1"
                                columnsM="1"
                                singleContainerFullSize="false"
                            />
                        </f:layout>
                        <f:formContainers>
                            <f:FormContainer
                                id="_IDGenFormContainer1"
                                ariaLabelledBy="Title2"
                            >
                                <f:toolbar>
                                    <Toolbar id="_IDGenToolbar1">
                                        <Title
                                            id="Title2"
                                            text="Ticket Information"
                                        />
                                        <ToolbarSpacer
                                            id="_IDGenToolbarSpacer2"
                                        />
                                    </Toolbar>
                                </f:toolbar>
                                <f:formElements>
                                    <f:FormElement
                                        id="idJiraElement"
                                        label="Jira Ticket ID"
                                    >
                                        <f:fields>
                                            <Input
                                                id="IdTicketJira"
                                                placeholder="Enter Jira ticket's ID"
                                                required="true"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement
                                        id="titreElement"
                                        label="Titre"
                                    >
                                        <f:fields>
                                            <Input
                                                id="Titre"
                                                placeholder="Enter the ticket's title"
                                                required="true"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement
                                        id="projetElement"
                                        label="Project"
                                    >
                                        <f:fields>
                                            <Select
                                                id="Projet"
                                                forceSelection="false"
                                                items="{ path: '/PROJECTIDSet', sorter: { path: 'IdProject' } }"
                                                required="true"
                                            >
                                                <core:Item
                                                    id="_IDGenItem1"
                                                    key="{IdProject}"
                                                    text="{NomProjet}"
                                                />
                                            </Select>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement
                                        id="priorityElement"
                                        label="Priority"
                                    >
                                        <f:fields>
                                            <Select
                                                id="Priority"
                                                forceSelection="false"
                                                required="true"
                                                selectedKey="Low"
                                            >
                                                <core:Item
                                                    id="_IDGenItem12"
                                                    key="Low"
                                                    text="Low"
                                                />
                                                <core:Item
                                                    id="_IDGenItem123"
                                                    key="Medium"
                                                    text="Medium"
                                                />
                                                <core:Item
                                                    id="_IDGenItem124"
                                                    key="High"
                                                    text="High"
                                                />
                                            </Select>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement
                                        id="consultantElement"
                                        label="Consultant"
                                    >
                                        <f:fields>
                                            <Select
                                                id="Consultant"
                                                forceSelection="false"
                                                items="{ path: '/CONSULTANTIDSet', sorter: { path: 'ConsultantId' } }"
                                                enabled="false"
                                            >
                                                <core:Item
                                                    id="_IDGenItem256"
                                                    key="{ConsultantId}"
                                                    text="{Name} {FirstName}"
                                                />
                                            </Select>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement
                                        id="technologyElement"
                                        label="Technology"
                                    >
                                        <f:fields>
                                            <MultiInput
                                                id="technology"
                                                showValueHelp="true"
                                                valueHelpRequest="handleValueHelp"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement
                                        id="estimatedElement"
                                        label="Estimated Days"
                                    >
                                        <f:fields>
                                            <StepInput
                                                id="Estimated"
                                                required="true"
                                                min="1"
                                                change="onChange"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                </f:formElements>
                            </f:FormContainer>
                            <f:FormContainer
                                id="_IDGenFormContainer1A"
                                ariaLabelledBy="Title2"
                            >
                                <f:toolbar>
                                    <Toolbar id="_IDGenToolbar1A">
                                        <Title
                                            id="Title2A"
                                            text="Ticket Details"
                                        />
                                        <ToolbarSpacer
                                            id="_IDGenToolbarSpacer2A"
                                        />
                                    </Toolbar>
                                </f:toolbar>
                                <f:formElements>
                                    <f:FormElement
                                        id="descriptionElement"
                                        label="Description"
                                    >
                                        <f:fields>
                                            <FeedInput
                                                id="Description"
                                                showIcon="false"
                                                placeholder="Enter the ticket's Details..."
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                </f:formElements>
                            </f:FormContainer>
                        </f:formContainers>
                    </f:Form>
                    <HBox
                        id="_IDGenHBox1"
                        justifyContent="Center"
                    >
                        <Button
                            id="_IDGenButton2"
                            type="Accept"
                            class="sapUiMediumMargin"
                            text="Create"
                            press="onCreateTicket"
                            width="8rem"
                            ariaDescribedBy="acceptButtonDescription genericButtonDescription"
                        />
                        <Button
                            id="_IDGenButton3"
                            type="Reject"
                            class="sapUiMediumMargin"
                            text="Reset"
                            press="onReset"
                            width="8rem"
                            ariaDescribedBy="rejectButtonDescription genericButtonDescription"
                        />
                    </HBox>
                </VBox>
            </a:content>
        </a:Card>
    </ScrollContainer>
</mvc:View>
