<mvc:View
    controllerName="management.controller.Projects"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:m="sap.m"
    xmlns="sap.ui.table"
    xmlns:semantic="sap.f.semantic"
>
    <semantic:SemanticPage
        id="_IDGenSemanticPage1"
        headerExpanded="true"
        headerPinnable="false"
        titleAreaShrinkRatio="1:1.6:1.6"
    >
        <semantic:titleHeading>
            <m:Toolbar
                id="_IDGenToolbar1"
                class="width100"
            >
                <m:Title
                    id="_IDGenTitle1"
                    text="Projects"
                    class="cardTitle"
                />
                <m:SearchField
                    id="_IDGenSearchField1"
                    search=".onSearch"
                    width="auto"
                />
            </m:Toolbar>
        </semantic:titleHeading>

        <!-- IconTabBar for filters -->
        <semantic:headerContent>
            <m:IconTabBar
                id="_IDGenIconTabBar1"
                select="onQuickFilter"
                class="IconTabBarLayoutProjects"
            >
                <!-- EventHandler for filtering -->
                <m:items>
                    <!-- All projects -->
                    <m:IconTabFilter
                        id="_IDGenIconTabFilter1"
                        key="all"
                        text="Projects"
                        showAll="true"
                        count="{CountModel>/count}"
                    />
                    <!-- Create -->
                    <m:IconTabFilter
                        id="_IDGenIconTabFilter2"
                        key="create"
                        text="Create"
                        icon="sap-icon://add"
                    />
                    <!-- Extract -->
                    <m:IconTabFilter
                        id="_IDGenIconTabFilter3"
                        key="extract"
                        text="Extract"
                        icon="sap-icon://download"
                        iconColor="Contrast"
                        class="blackRoundBorder"
                    />
                </m:items>
            </m:IconTabBar>
        </semantic:headerContent>

        <!-- Main content with the table of consultants -->
        <semantic:content>
            <Table
                id="idProjectsTable"
                selectionMode="None"
                rows="{/PROJECTIDSet}"
                alternateRowColors="true"
            >
                <!-- Binding to OData data -->
                <columns>
                    <!-- Definition of columns -->
                    <Column
                        id="_IDGenColumn3"
                        width="6em"
                        hAlign="Center"
                    >
                        <m:Label
                            id="_IDGenLabel1"
                            text="ID"
                        />
                        <template>
                            <m:Text
                                id="_IDGenText8"
                                text="{IdProject}"
                                wrapping="false"
                            />
                        </template>
                    </Column>

                    <Column
                        id="_IDGenColumn4"
                        hAlign="Center"
                    >
                        <m:Label
                            id="_IDGenLabel2"
                            text="Project"
                            wrapping="false"
                        />
                        <template>
                            <m:Text
                                id="_IDGenText9"
                                text="{NomProjet}"
                                wrapping="false"
                            />
                        </template>
                    </Column>

                    <Column
                        id="_IDGenColumn5"
                        hAlign="Center"
                    >
                        <m:Label
                            id="_IDGenLabel3"
                            text="Project Manager"
                        />
                        <template>
                            <m:Text
                                id="_IDGenText10"
                                text="{ChefProjet}"
                                wrapping="false"
                            />
                        </template>
                    </Column>
                </columns>
            </Table>
        </semantic:content>
    </semantic:SemanticPage>
</mvc:View>
