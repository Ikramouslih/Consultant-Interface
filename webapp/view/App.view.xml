<mvc:View
    controllerName="management.controller.App"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
>
    <tnt:ToolPage
        id="app"
        class="sapUiDemoToolPage"
    >
        <tnt:header>
            <tnt:ToolHeader
                id="_IDGenToolHeader1"
                class="header"
            >
				 <Button
                    id="sideNavigationToggleButton"
                    icon="sap-icon://menu2"
                    type="Transparent"
                    press=".onSideNavButtonPress"
                    tooltip="{i18n>collpaseMenuButtonText}"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData
                            id="_IDGenOverflowToolbarLayoutData1"
                            priority="NeverOverflow"
                        />
                    </layoutData>
                </Button>
                <Image
                    id="_IDGenImage1"
                    src="../assets/logo.png"
                    class="customLogoClass"
                />
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <ToolbarSpacer id="_IDGenToolbarSpacer2" />
                <Button
                    id="notificationButton"
                    icon="sap-icon://bell"
                    visible="{= ${alerts>/alerts/notifications}.length === 0 ? false : true }"
                    type="Transparent"
                    press=".onNotificationPress"
                    tooltip="{i18n>notificationButtonTooltip}"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData
                            id="_IDGenOverflowToolbarLayoutData3"
                            closeOverflowOnInteraction="false"
                        />
                    </layoutData>
                </Button>
                <Button
                    id="userButton"
                    text="{i18n>userName}"
                    type="Transparent"
                    press=".onUserNamePress"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData
                            id="_IDGenOverflowToolbarLayoutData4"
                            closeOverflowOnInteraction="false"
                        />
                    </layoutData>
                </Button>
            </tnt:ToolHeader>
        </tnt:header>
        <tnt:sideContent>
            <tnt:SideNavigation
                id="_IDGenSideNavigation1"
                class="sidebar"
                expanded="true"
            >
                <tnt:NavigationList id="_IDGenNavigationList1" class="sideNav">
                    <tnt:NavigationListItem
                        id="_IDGenNavigationListItem1"
                        class="sideNavLinks"
                        text="Dashboard"
                        icon="sap-icon://home"
						expanded="true"
                        select="onDashboardSelect"
                    />
                    <tnt:NavigationListItem
                        id="_IDGenNavigationListItem2"
                        class="sideNavLinks"
                        text="Consultants"
                        icon="sap-icon://add-employee"
						expanded="true"
                        select="onConsultantsSelect"
                    />
                    <tnt:NavigationListItem
                        id="_IDGenNavigationListItem3"
                        class="sideNavLinks"
                        text="Tickets"
                        icon="sap-icon://task"
						expanded="true"
                    />
                    <tnt:NavigationListItem
                        id="_IDGenNavigationListItem4"
                        class="sideNavLinks"
                        text="Projects"
                        icon="sap-icon://business-objects-experience"
						expanded="true"
                    />
                </tnt:NavigationList>
            </tnt:SideNavigation>
        </tnt:sideContent>
        <tnt:mainContents>
            <App id="mainContents" />
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>
