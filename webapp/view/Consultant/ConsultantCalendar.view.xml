<mvc:View
    controllerName="management.controller.ConsultantCalendar"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    class="viewPadding"
    xmlns:formLayout="sap.ui.layout.form"
>

    <ScrollContainer
        id="_IDGenScrollContainer1"
        vertical="true"
        horizontal="false"
        height="100%"
    >

        <formLayout:Form id="FormToolbar" editable="true" ariaLabelledBy="Title1" class="sapMOHRBgSolid sapMOHR sapMOHRBgTranslucent sapUiMediumMargin  " width="95%" >
            <formLayout:toolbar>
                    <Toolbar id="TB1">
                        <Title id="Title1" text="My Calendar"/>
                        <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                    </Toolbar>
            </formLayout:toolbar>
            <formLayout:layout>
                <formLayout:ResponsiveGridLayout id="_IDGenResponsiveGridLayout1"
                    labelSpanXL="12"
                    labelSpanL="12"
                    labelSpanM="12"
                    labelSpanS="12"
                    emptySpanXL="0"
                    emptySpanL="0"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false"
                />
            </formLayout:layout>
            <formLayout:FormContainer id="_IDGenFormContainer2" ariaLabelledBy="Title3">
                <formLayout:formElements>

                    <formLayout:FormElement id="_IDGenFormElement6"  >
                    <HBox id="_IDGenHBox2" class="position-validate" >
                        <HBox id="_IDGenHBox1" class="CalendarAvailability" >
                            <Label id="_IDGenLabel1" text="Availability:" class="sapUiTinyMarginEnd" />
                            <Switch id="_IDGenSwitch1" type="AcceptReject" state="{/Enabled}" change=".onSwitchChange" />
                        </HBox>

                        <HBox id="_IDGenHBox2a" alignItems="End" >
                            <Input
                                id="TicketInputa"
                                type="Text"
                                placeholder="Enter Ticket ..."
                                showValueHelp="true"
                                valueHelpRequest=".onValueHelpRequest"
                                width="15rem"
                                class="TicketInput"
                                enabled="{/Enabled}" />
                            <ToggleButton id="_IDGenToggleButton1a" text="Valider" press="onCreateAvailability" />
                        </HBox>
                    </HBox>    
                        

                    </formLayout:FormElement>

                    <formLayout:FormElement id="_IDGenFormElement5">
                        <u:Calendar
                            id="calendar"
                            select="handleCalendarSelect"
                            intervalSelection="false"
                            singleSelection="false" 
                            width="100%"
                            class="myCalender"/>
                    </formLayout:FormElement>
                    <formLayout:FormElement id="_IDGenFormElementaa5" >
                        <Button id="_IDGenButtonaa1"
                            press="handleRemoveSelection"
                            text="Remove All Selected Dates" width="100%" />
                    </formLayout:FormElement>
                    <formLayout:FormElement id="_IDGenFormElementa5">
                        <List
                            id="selectedDatesLista"
                            class="labelMarginCenter"
                            noDataText="No Dates Selected"
                            headerText="Selected Dates (yyyy-mm-dd)"
                            items="{path: '/selectedDates'}" >
                            <StandardListItem id="_IDGenStandardListItema"
                                class="calendarListItem"
                                title="{path : 'Date', formatter : '.formatDate'}" 
                             />
                        </List>
                    </formLayout:FormElement>

                </formLayout:formElements>
            </formLayout:FormContainer>
        </formLayout:Form>

    </ScrollContainer>

</mvc:View>
