<mvc:View
    controllerName="management.controller.TicketCreate"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:html="http://www.w3.org/1999/xhtml"
>
    <f:Card
        id="_IDGenCard1"
        class="sapUiMediumMargin login-box"
        width="500px"
    >
        <f:content>
            <CustomListItem id="_IDGenCustomListItem1">
                <VBox id="_IDGenVBox1">
                    <InputListItem
                        id="_IDGenInputListIte1"
                        label="Jira Ticket Id :"
                        class="user-box InputListItem"
                    >
                        <Input
                            id="IdTicketJira"
                            placeholder="Enter Jira's Id "
                        />
                    </InputListItem>

                    <InputListItem
                        id="_IDGenInputListIte2"
                        label="Titre :"
                    >
                        <Input
                            id="Titre"
                            placeholder="Enter title "
                        />
                    </InputListItem>
                    <InputListItem
                        id="_IDGenInputListIte3"
                        label="Project :"
                    >
                        <Select
                            id="Projet"
                            forceSelection="false"
                            items="{
                    path: '/PROJECTIDSet',
                    sorter: {path: 'IdProject' }
                }"
                        >
                            <core:Item
                                id="_IDGenItem1"
                                key="{IdProject}"
                                text="{NomProjet}"
                            />
                        </Select>
                    </InputListItem>
                    <InputListItem
                        id="_IDGenInputListIte33"
                        label="Consultant :"
                    >
                        <Select
                            id="Consultant"
                            forceSelection="false"
                            items="{
                    path: '/CONSULTANTIDSet',
                    sorter: {path: 'ConsultantId' }
                }"
                        >
                            <core:Item
                                id="_IDGenItem2"
                                key="{ConsultantId}"
                                text="{Name} {FirstName}"
                            />
                        </Select>
                    </InputListItem>
                    <InputListItem
                        id="_IDGenInputListIte4"
                        label="Description :"
                    >
                        <Input
                            id="Description"
                            placeholder="Enter Description "
                        />
                    </InputListItem>
                    <InputListItem
                        id="_IDGenInputListIte5"
                        label="Technology :"
                    >
                        <Input
                            id="Technology"
                            placeholder="Enter Technology "
                        />
                    </InputListItem>
                    <InputListItem
                        id="_IDGenInputListIte6"
                        label="Estimated :"
                    >
                        <Input
                            id="Estimated"
                            placeholder="Enter duration "
                        />
                    </InputListItem>
                    <ToggleButton
                        id="_IDGenToggleButton1"
                        icon="sap-icon://add"
                        press="onCreateTicket"
                        text="Create"
                    />
                </VBox>

                <!-- ******************************************* -->

                <VBox id="_IDGenVBox2" class="sapUiSmallMargin">
                <form:Form id="FormToolbar"
                    editable="true"
                    ariaLabelledBy="Title1">
                    <form:toolbar>
                        <Toolbar id="TB1">
                            <Title id="Title1" text="Address"/>
                            <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                            <Button id="_IDGenButton1" icon="sap-icon://settings"/>
                            <Button id="_IDGenButton2" icon="sap-icon://drop-down-list" />
                        </Toolbar>
                    </form:toolbar>
                    <form:layout>
                        <form:ResponsiveGridLayout id="_IDGenResponsiveGridLayout1"
                            labelSpanXL="4"
                            labelSpanL="3"
                            labelSpanM="4"
                            labelSpanS="12"
                            adjustLabelSpan="false"
                            emptySpanXL="0"
                            emptySpanL="4"
                            emptySpanM="0"
                            emptySpanS="0"
                            columnsXL="2"
                            columnsL="1"
                            columnsM="1"
                            singleContainerFullSize="false" />
                    </form:layout>
                    <form:formContainers>
                        <form:FormContainer id="_IDGenFormContainer1" ariaLabelledBy="Title2">
                            <form:formElements>
                                <form:FormElement id="_IDGenFormElement1" label="Name">
                                    <form:fields>
                                        <Input value="{SupplierName}" id="name"/>
                                    </form:fields>
                                </form:FormElement>
                            </form:formElements>
                        </form:FormContainer>
                    </form:formContainers>
                </form:Form>
            </VBox>

            </CustomListItem>
        </f:content>
    </f:Card>
</mvc:View>
