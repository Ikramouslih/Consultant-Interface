<mvc:View
    controllerName="management.controller.TicketCreate"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:a="sap.f"
    displayBlock="true"
>
    <ScrollContainer
        id="_IDGenScrollContainer1"
        vertical="true"
        horizontal="false"
        height="100%">
        
        <a:Card id="_IDGenCard1" class="sapUiMediumMargin" width="95%">
            <a:content>
                <VBox id="_IDGenVBox1" class="sapUiSmallMargin" width="100%">
                    <f:Form id="FormToolbar" editable="true" ariaLabelledBy="Title1">
                        <f:toolbar>
                            <Toolbar id="TB1">
                                <Title id="Title1" text="New Ticket"/>
                                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                            </Toolbar>
                        </f:toolbar>
                        <f:layout>
                            <f:ResponsiveGridLayout id="_IDGenResponsiveGridLayout1"
                                labelSpanXL="3"
                                labelSpanL="3"
                                labelSpanM="3"
                                labelSpanS="12"
                                emptySpanXL="0"
                                emptySpanL="0"
                                emptySpanM="0"
                                emptySpanS="0"
                                columnsXL="1"
                                columnsL="1"
                                columnsM="1"
                                singleContainerFullSize="false"
                            />
                        </f:layout>
                        <f:formContainers>
                            <f:FormContainer id="_IDGenFormContainer1" ariaLabelledBy="Title2">
                                <f:toolbar>
                                    <Toolbar id="_IDGenToolbar1">
                                        <Title id="Title2" text="Ticket Details"/>
                                        <ToolbarSpacer id="_IDGenToolbarSpacer2" />
                                    </Toolbar>
                                </f:toolbar>
                                <f:formElements>
                                    <f:FormElement id="idJiraElement" label="Jira Ticket Id">
                                        <f:fields>
                                            <Input id="IdTicketJira" placeholder="Enter Jira's Id" required="true"/>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="titreElement" label="Titre">
                                        <f:fields>
                                            <Input id="Titre" placeholder="Enter title" required="true"/>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="projetElement" label="Project">
                                        <f:fields>
                                            <Select id="Projet" forceSelection="false" items="{ path: '/PROJECTIDSet', sorter: { path: 'IdProject' } }">
                                                <core:Item id="_IDGenItem1" key="{IdProject}" text="{NomProjet}" />
                                            </Select>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="consultantElement" label="Consultant">
                                        <f:fields>
                                            <Select id="Consultant" forceSelection="false" items="{ path: '/CONSULTANTIDSet', sorter: { path: 'ConsultantId' } }">
                                                <core:Item id="_IDGenItem2" key="{ConsultantId}" text="{Name} {FirstName}" />
                                            </Select>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="descriptionElement" label="Description">
                                        <f:fields>
                                            <Input id="Description" placeholder="Enter Description" required="true"/>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="technologyElement" label="Technology">
                                        <f:fields>
                                            <Select id="Technology" forceSelection="false" items="{ path: '/TECHNOIDSet', sorter: { path: 'IdTechnology' } }">
                                                <core:Item id="_IDGenItem3" key="{IdTechnology}" text="{NomTechnology}" />
                                            </Select>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="estimatedElement" label="Estimated">
                                        <f:fields>
                                            <Input id="Estimated" placeholder="Enter duration" required="true"/>
                                        </f:fields>
                                    </f:FormElement>
                                </f:formElements>
                            </f:FormContainer>
                        </f:formContainers>
                    </f:Form>
                    <HBox id="_IDGenHBox1" justifyContent="Center">
                        <Button id="_IDGenButton2" type="Accept"
                                class="sapUiMediumMargin"
                                text="Create"
                                press="onCreateTicket"
                                width="8rem"
                                ariaDescribedBy="acceptButtonDescription genericButtonDescription">
                        </Button>
                        <Button id="_IDGenButton3" type="Reject"
                                class="sapUiMediumMargin"
                                text="Reset"
                                press="onReset"
                                width="8rem"
                                ariaDescribedBy="rejectButtonDescription genericButtonDescription">
                        </Button>
                    </HBox>
                </VBox>
            </a:content>
        </a:Card>
    </ScrollContainer>
</mvc:View>
