<mvc:View
    controllerName="management.controller.TicketManagement.CTDone"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:semantic="sap.f.semantic"
    displayBlock="true"
    xmlns="sap.ui.table"
    xmlns:tnt="sap.tnt"
>
    <semantic:SemanticPage
        id="page"
        headerExpanded="true"
        headerPinnable="false"
        titleAreaShrinkRatio="1:1.6:1.6"
    >
        <semantic:titleHeading>
            <m:Toolbar
                id="_IDGenToolbar1"
                class="width100"
            >
                <m:Title
                    id="_IDGenTitle1"
                    text="Tickets"
                    class="cardTitle"
                />
            </m:Toolbar>
        </semantic:titleHeading>

        <!-- Contenu principal avec la table des tickets -->
        <semantic:content>
            <Table
                id="idProductsTable"
                selectionMode="None"
                rows="{TicketsModel>/Tickets}"
                alternateRowColors="true"
            >
                <!-- Liaison aux données OData -->

                <columns>
                    <!-- Définition des colonnes -->

                    <Column
                        id="_IDGenColumn12"
                        width="5em"
                    >
                        <m:Label
                            id="_IDGenLabel12"
                            text="Jira ID"
                        />
                        <template>
                            <m:Text
                                id="_IDGenText112"
                                text="{TicketsModel>IdJira}"
                                wrapping="false"
                            />
                        </template>
                    </Column>

                    <Column
                        id="_IDGenColumn1a2"
                        width="16rem"
                    >
                        <m:Label
                            id="_IDGenLabel1a2"
                            text="Title"
                        />
                        <template>
                            <m:Text
                                id="_IDGenText11a2"
                                text="{TicketsModel>Titre}"
                                wrapping="false"
                            />
                        </template>
                    </Column>

                    <Column
                        id="_IDGenColumn122"
                        width="11em"
                    >
                        <m:Label
                            id="_IDGenLabel122"
                            text="Project"
                        />
                        <template>
                            <m:Text
                                id="_IDGenText1122"
                                text="{TicketsModel>Projet}"
                                wrapping="false"
                            />
                        </template>
                    </Column>

                    <!--Column
                        id="_IDGenColumn123"
                        width="14em"
                    >
                        <m:Label
                            id="_IDGenLabel123"
                            text="Consultant"
                        />
                        <template>
                            <m:Text
                                id="_IDGenText11a2aA"
                                text="{= ${TicketsModel>ConsultantName} === '' ? '-' : ${TicketsModel>ConsultantName} }"
                                wrapping="false"
                            />
                        </template>
                    </Column-->

                    <Column
                        id="_IDGenColumna11211"
                        width="8em"
                    >
                        <m:Label
                            id="_IDGenLabel1a2111a"
                            text="Priority"
                        />
                        <template>
                            <tnt:InfoLabel
                                id="il81"
                                text="{TicketsModel>Priority}"
                                colorScheme="{
                                    path: 'TicketsModel>Priority',
                                    formatter: '.formatPriorityColor'
                                }"
                                icon="{
                                    path: 'TicketsModel>Priority',
                                    formatter: '.formatPriorityIcon'
                                }"
                            />
                        </template>
                    </Column>

                    <Column
                        id="_IDGenColumna12"
                        width="7em"
                    >
                        <m:Label
                            id="_IDGenLabel1a2a"
                            text="Creation Date"
                        />
                        <template>
                            <m:Text
                                id="_IDGenText11a2a"
                                text="{
                                    path: 'TicketsModel>CreationDate',
                                    formatter: '.formatDate'
                                }"
                                wrapping="false"
                            />
                        </template>
                    </Column>
                </columns>
            </Table>
        </semantic:content>
    </semantic:SemanticPage>
</mvc:View>
