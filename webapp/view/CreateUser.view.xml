<mvc:View
    controllerName="management.controller.CreateUser"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:a="sap.f">

    <ScrollContainer
        id="_IDGenScrollContainer1"
        vertical="true"
        horizontal="false"
        height="100%">
        
        <a:Card id="_IDGenCard1" class="sapUiMediumMargin" width="95%">
            <a:content>
                <VBox id="_IDGenVBox1" class="sapUiSmallMargin" width="100%">
                    <f:Form id="FormToolbar" editable="true" ariaLabelledBy="Title1">
                        <f:toolbar>
                            <Toolbar id="TB1">
                                <Title id="Title1" text="New User"/>
                                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                            </Toolbar>
                        </f:toolbar>
                        <f:layout>
                            <f:ResponsiveGridLayout id="_IDGenResponsiveGridLayout1"
                                labelSpanXL="3"
                                labelSpanL="3"
                                labelSpanM="3"
                                labelSpanS="12"
                                emptySpanXL="0"
                                emptySpanL="0"
                                emptySpanM="0"
                                emptySpanS="0"
                                columnsXL="2"
                                columnsL="2"
                                columnsM="2"
                                singleContainerFullSize="false"
                            />
                        </f:layout>
                        <f:formContainers>
                            <f:FormContainer id="_IDGenFormContainer1" ariaLabelledBy="Title2">
                                <f:toolbar>
                                    <Toolbar id="_IDGenToolbar1">
                                        <Title id="Title2" text="Personal"/>
                                        <ToolbarSpacer id="_IDGenToolbarSpacer2" />
                                    </Toolbar>
                                </f:toolbar>
                                <f:formElements>
                                    <f:FormElement id="firstNameElement" label="First Name">
                                        <f:fields>
                                            <Input value="{FirstName}" id="firstName" required="true"/>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="lastNameElement" label="Last Name">
                                        <f:fields>
                                            <Input id="lastName" value="{Name}" required="true"/>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="emailElement" label="Email">
                                        <f:fields>
                                            <Input id="email" value="{Email}" required="true"/>
                                            <Input id="domain" value="@inetum.com" enabled="false">
                                                <layoutData>
                                                    <l:GridData id="domaingrid" span="XL4 L4 M4 S8"/>
                                                </layoutData>
                                            </Input>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="multiElement" label="Expertise">
                                         <f:fields>
                                            <MultiInput id="expertise" 
                                                showValueHelp="true" 
                                                valueHelpRequest="handleValueHelp">
                                            </MultiInput>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="gradeElement" label="Grade">
                                        <f:fields>
                                            <Select width="100%" id="grade" selectedKey="initial">
                                                <items>
                                                    <core:Item id="_IDGenItem15" text="Choose a grade..." enabled="false" key="initial"/>
                                                    <core:Item id="_IDGenItem11" text="Junior" key="Junior"/>
                                                    <core:Item id="_IDGenItem22" text="Confirmed" key="Confirmed"/>
                                                    <core:Item id="_IDGenItem33" text="Senior" key="Senior"/>
                                                </items>
                                            </Select>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="countryElement" label="Country">
                                        <f:fields>
                                            <Select width="100%" id="country" required="true" selectedKey="initial">
                                                <items>
                                                    <core:Item id="_IDGenItem151" text="Choose a country..." enabled="false" key="initial"/>
                                                    <core:Item id="_IDGenItem1" text="Morocco" key="Morocco"/>
                                                    <core:Item id="_IDGenItem2" text="Tunisia" key="Tunisia"/>
                                                    <core:Item id="_IDGenItem3" text="Other" key="Other"/>
                                                </items>
                                            </Select>
                                        </f:fields>
                                    </f:FormElement>
                                </f:formElements>
                            </f:FormContainer>

                            <f:FormContainer id="_IDGenFormContainer2" ariaLabelledBy="Title3">
                                <f:toolbar>
                                    <Toolbar id="_IDGenToolbar2">
                                        <Title id="Title3" text="Account"/>
                                        <ToolbarSpacer id="_IDGenToolbarSpacer3" />
                                    </Toolbar>
                                </f:toolbar>
                                <f:formElements>
                                    <f:FormElement id="_IDGenFormElement5" label="Login">
                                        <f:fields>
                                            <Input value="{sLogin}" id="login" required="true"/>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="_IDGenFormElement6" label="Password">
                                        <f:fields>
                                            <Input value="{sPassword}" id="password" required="true" type="Password"/>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="_IDGenFormElement6A" label="Confirm Pwd">
                                        <f:fields>
                                            <Input value="{sConfirmPassword}" id="confirmPassword" required="true" type="Password"/>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="_IDGenFormElement4A" label="Account">
                                        <f:fields>
                                            <Select width="100%" id="hold" selectedKey="Active" required="true">
                                                <items>
                                                    <core:Item id="_IDGenItem1A" text="Active" key="Active"/>
                                                    <core:Item id="_IDGenItem2A" text="Inactive" key="Inactive"/>
                                                </items>
                                            </Select>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="_IDGenFormElement4AA" label="Role">
                                        <f:fields>
                                            <Select width="100%" id="role" required="true" selectedKey="initial">
                                                <items>
                                                    <core:Item id="_IDGenItem1AAA" text="Choose a role..." key="initial"/>
                                                    <core:Item id="_IDGenItem1AA" text="Consultant" key="Consultant"/>
                                                    <core:Item id="_IDGenItem2AA" text="Manager" key="Manager"/>
                                                </items>
                                            </Select>
                                        </f:fields>
                                    </f:FormElement>
                                </f:formElements>
                            </f:FormContainer>
                        </f:formContainers>
                    </f:Form>
                    <HBox id="_IDGenHBox1" justifyContent="Center">
                        <Button id="_IDGenButton2" type="Accept"
                                class="sapUiMediumMargin"
                                text="Create"
                                press="onCreateUser"
                                width="8rem"
                                ariaDescribedBy="acceptButtonDescription genericButtonDescription">
                        </Button>
                        <Button id="_IDGenButton3" type="Reject"
                                class="sapUiMediumMargin"
                                text="Reset"
                                press="onReset"
                                width="8rem"
                                ariaDescribedBy="rejectButtonDescription genericButtonDescription">
                        </Button>
                    </HBox>
                </VBox>
            </a:content>
        </a:Card>
    </ScrollContainer>
</mvc:View>
