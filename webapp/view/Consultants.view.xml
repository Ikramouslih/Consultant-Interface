<mvc:View 
    controllerName="management.controller.Consultants"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:semantic="sap.f.semantic" 
    displayBlock="true">

<semantic:SemanticPage 
        id="page" 
        headerExpanded="true" 
        headerPinnable="false"
        titleAreaShrinkRatio="1:1.6:1.6">
        
        <semantic:titleHeading>
			<Title id="_IDGenTitle1" text="Consultants" />
		</semantic:titleHeading>

        <!-- IconTabBar pour les filtres -->
        <semantic:headerContent>
            <IconTabBar 
                id="iconTabBar" 
                select="onQuickFilter"> <!-- EventHandler pour le filtrage -->
                <items>
                    <IconTabFilter id="_IDGenIconTabFilter1" 
                        key="all" 
                        text="Consultants" 
                        showAll="true"
                        class="filterbuttonsuccess"
                        count="{CountModel>/count}"/>  <!-- Afficher tous les tickets -->
                    <IconTabFilter id="_IDGenIconTabFilter2" key="available" text="available" 
                        icon="sap-icon://message-success"
						iconColor="Positive"
                        class="sapUiIconSuccess"
                        count="{CountModel>/available}" 
                        /> <!-- Tickets terminés -->
                    <IconTabFilter id="_IDGenIconTabFilter4" key="unavailable" text="unavailable"
                        icon="sap-icon://message-error"
						iconColor="Negative" 
                        class="sapUiIconDanger"
                        count="{CountModel>/unavailable}"/>
                        
                     <IconTabFilter id="_IDGenIconTabFilter5"  
                        key="create" 
                        text="Create" 
                        icon="sap-icon://add" />

                </items>
            </IconTabBar>

        </semantic:headerContent>

        
        <!-- Contenu principal avec la table des tickets -->
        <semantic:content>
            <Table 
                id="idProductsTable" 
                inset="false" 
                items="{ path: '/CONSULTANTIDSet' }"> <!-- Liaison aux données OData -->

                <columns>
                    <!-- Définition des colonnes -->
                    <Column id="_IDGenColumn1" width="12em"><Text id="_IDGenText1" text="ConsultantId" /></Column>
                    <Column id="_IDGenColumn2" width="5em"><Text id="_IDGenText2" text="Name" /></Column>
                    <Column id="_IDGenColumn3" width="7em"><Text id="_IDGenText3" text="FirstName" /></Column>
                    <Column id="_IDGenColumn4" width="7em"><Text id="_IDGenText4" text="Disponibility" /></Column>
                    <Column id="_IDGenColumn5" width="20em"><Text id="_IDGenText5" text="Email" /></Column>
                    <Column id="_IDGenColumn6" hAlign="End"><Text id="_IDGenText6" text="" /></Column>
                </columns>
                <!-- Contenu des items de la table -->
                <items>
                    <ColumnListItem id="_IDGenColumnListItem1">
                        <cells>
                            <ObjectIdentifier id="_IDGenObjectIdentifier1" text="{ConsultantId}" />
                            <Text id="_IDGenText9" text="{Name}" />
                            <Text id="_IDGenText10" text="{FirstName}" />
                            <Text id="_IDGenText11" text="{Disponilbilty}" />
                            <Text id="_IDGenText12" text="{Email}" />
                            <Button id="ToggleButton1" icon="sap-icon://show" type="Emphasized" class="showicon" press="onPress"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </semantic:content>

    </semantic:SemanticPage>    

</mvc:View>
