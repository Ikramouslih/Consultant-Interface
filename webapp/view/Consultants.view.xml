<mvc:View
    controllerName="management.controller.Consultants"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:semantic="sap.f.semantic"
    displayBlock="true"
    xmlns="sap.ui.table"
    xmlns:tnt="sap.tnt"
>
    <semantic:SemanticPage
        id="page"
        headerExpanded="true"
        headerPinnable="false"
        titleAreaShrinkRatio="1:1.6:1.6"
    >
        <semantic:titleHeading>
            <m:Toolbar
                id="_IDGenToolbar1"
                class="width100"
            >
                <m:Title
                    id="_IDGenTitle1"
                    text="Consultants"
                    class="cardTitle"
                />
                <m:SearchField
                    id="searchField"
                    search=".onSearch"
                    width="auto"
                />
            </m:Toolbar>
        </semantic:titleHeading>

        <!-- IconTabBar for filters -->
        <semantic:headerContent>
            <m:IconTabBar
                id="iconTabBar"
                select="onQuickFilter"
                class="IconTabBarLayoutConsultants"
            >
                <!-- EventHandler for filtering -->
                <m:items>
                    <!-- Show all consultants -->
                    <m:IconTabFilter
                        id="_IDGenIconTabFilter1"
                        key="all"
                        text="Consultants"
                        showAll="true"
                        class="filterbuttonsuccess"
                        count="{CountModel>/count}"
                    />
                    <!-- Available consultants -->
                    <m:IconTabFilter
                        id="_IDGenIconTabFilter2"
                        key="available"
                        text="Available"
                        icon="sap-icon://message-success"
                        iconColor="Positive"
                        class="sapUiIconSuccess"
                        count="{CountModel>/available}"
                    />
                    <!-- Unavailable consultants -->
                    <m:IconTabFilter
                        id="_IDGenIconTabFilter4"
                        key="unavailable"
                        text="Unavailable"
                        icon="sap-icon://message-error"
                        iconColor="Negative"
                        class="sapUiIconDanger"
                        count="{CountModel>/unavailable}"
                    />
                    <!-- Create new consultant -->
                    <m:IconTabFilter
                        id="_IDGenIconTabFilter5"
                        key="create"
                        text="Create"
                        icon="sap-icon://add"
                    />
                    <m:IconTabFilter
                        id="extractButton"
                        key="extract"
                        text="Extract"
                        icon="sap-icon://download"
                        iconColor="Contrast"
                        class="blackRoundBorder"
                    />
                </m:items>
            </m:IconTabBar>
        </semantic:headerContent>

        <!-- Main content with the table of consultants -->
        <semantic:content>
            <Table
                id="idConsultantsTable"
                selectionMode="None"
                rows="{/CONSULTANTIDSet}"
                alternateRowColors="true"
            >
                <!-- Binding to OData data -->

                <columns>
                    <!-- Definition of columns -->
                    <Column
                        id="_IDGenColumn1"
                        width="6em"
                        hAlign="Center"
                    >
                        <m:Label
                            id="_IDGenText1"
                            text="ID"
                        />
                        <template>
                            <m:Text
                                id="_IDGenText112"
                                text="{ConsultantId}"
                                wrapping="false"
                            />
                        </template>
                    </Column>

                    <Column
                        id="_IDGenColumn2"
                        width="9em"
                        hAlign="Center"
                    >
                        <m:Label
                            id="_IDGenText2"
                            text="Last Name"
                            wrapping="false"
                        />
                        <template>
                            <m:Text
                                id="_IDGenText11aQ2"
                                text="{Name}"
                                wrapping="false"
                            />
                        </template>
                    </Column>

                    <Column
                        id="_IDGenColumn3"
                        width="9em"
                        hAlign="Center"
                    >
                        <m:Label
                            id="_IDGenText3"
                            text="First Name"
                        />
                        <template>
                            <m:Text
                                id="_IDGenText11a2"
                                text="{FirstName}"
                                wrapping="false"
                            />
                        </template>
                    </Column>

                    <Column
                        id="_IDGenColumn4"
                        width="8em"
                        hAlign="Center"
                    >
                        <m:Label
                            id="_IDGenText4"
                            text="Availability"
                        />
                        <template>
                            <m:Text
                                id="_IDGenText11aA2"
                                text="{= ${Disponilbilty} === '1' ? '✅' : '❌' }"
                                wrapping="false"
                            />
                        </template>
                    </Column>

                    <Column
                        id="_IDGenColumn5"
                        width="20em"
                        hAlign="Center"
                    >
                        <m:Label
                            id="_IDGenText5"
                            text="Email"
                        />
                        <template>
                            <m:Text
                                id="_IDGenTexts11a2"
                                text="{Email}"
                                wrapping="false"
                            />
                        </template>
                    </Column>

                    <Column
                        id="_IDGenColumn6"
                        hAlign="End"
                    >
                        <m:Label
                            id="_IDGenText6"
                            text=""
                        />
                        <template>
                            <m:Button
                                id="ToggleButton1"
                                icon="sap-icon://show"
                                type="Transparent"
                                class="showicon"
                                press="onPress"
                            />
                        </template>
                    </Column>
                </columns>
            </Table>
        </semantic:content>
    </semantic:SemanticPage>
</mvc:View>
